block content
   .container
      .table-wrapper
        .table-title
          .row
            .col-sm-6
              h2
                | Manage 
                b Policy
            .col-sm-6
              a.btn.btn-success(href='#addPolicyModal', data-toggle='modal')
                i.material-icons 
                span Add New Policy
              a.btn.btn-danger(href='#deletePolicyModal', data-toggle='modal')
                i.material-icons 
                span Delete
        table#usersTable.table.table-striped.table-hover
          thead
            tr
              th
                span.custom-checkbox
                  input#selectAll(type='checkbox')
                  label(for='selectAll')
              th Policy Number
              th Attribute
              th Status
              th Client Number
              th Agent Number
              th Created
              th Status Updated Date
              th Note
              th Type
              th Action

          - var count = 1
          each policy in policies
            tr
              td
                span.custom-checkbox
                  input#checkbox1(type='checkbox', name='options[]', value=count++)
                  label(for='checkbox1')
              td= policy.policyNumber
              td= policy.attribute
              td= policy.status
              td= policy.clientNumber
              td= policy.agentNumber
              td= policy.created
              td= policy.statusUpdateDate
              td= policy.note
              td= policy.type 
              td
                a.edit(href='#editPolicyModal', data-toggle='modal',id="editId"+ count,data-testid=count, data-userName=user.email)
                  i.material-icons(data-toggle='tooltip', title='Edit') 
                a.delete(href='#deletePolicyModal', data-toggle='modal')
                  i.material-icons(data-toggle='tooltip', title='Delete') 
      //add Modal
      #addPolicyModal.modal.fade
        .modal-dialog
          .modal-content
            form(method='POST',action='/createPolicy')
              .modal-header
                h4.modal-title Add New Policy
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              input(type='hidden', name='_csrf', value=_csrf)
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='policyNumber') Policy Number
                .col-md-7
                  input.form-control(type='text', name='policyNumber', id='policyNumber', placeholder='policyNumber', autofocus, autocomplete='policyNumber', required)
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='attribute') Attribute
                .col-md-7
                  input.form-control(type='text', name='attribute', id='attribute', placeholder='Attribute', autocomplete='attribute', required)
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='status') Status
                .col-md-7
                  input.form-control(type='text', name='status', id='status', placeholder='Status', autocomplete='status', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='clientNumber') Client Number
                .col-md-7
                  input.form-control(type='text', name='clientNumber', id='clientNumber', placeholder='Client Number', autocomplete='clientNumber', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='agentNumber') Agent Number
                .col-md-7
                  input.form-control(type='text', name='agentNumber', id='agentNumber', placeholder='Agent Number', autocomplete='agentNumber', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='created') Created
                .col-md-7
                  input.form-control(type='text', name='created', id='created', placeholder='Created', autocomplete='created', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='statusUpdateDate') Status Update Date
                .col-md-7
                  input.form-control(type='date', name='statusUpdateDate', id='statusUpdateDate', placeholder='Status Update Date', autocomplete='statusUpdateDate', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='note') Note
                .col-md-7
                  input.form-control(type='text', name='note', id='note', placeholder='Note', autocomplete='note', required)
                  .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='type') Type
                .col-md-7
                  input.form-control(type='text', name='type', id='type', placeholder='Type', autocomplete='type', required)
              .modal-footer
                input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
                input.btn.btn-success(type='submit', value='Add')
      // Edit Modal HTML
      #editPolicyModal.modal.fade
        .modal-dialog
          .modal-content
            form
              .modal-header
                h4.modal-title Edit Policy
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              .modal-body
                .form-group
                  label Name
                  input.form-control(type='text', required='', id='nameID',disabled)
                .form-group
                  label Email
                  input.form-control(type='email', required='')
                .form-group
                  label Address
                  textarea.form-control(required='')
                .form-group
                  label Phone
                  input.form-control(type='text', required='')
              .modal-footer
                input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
                input.btn.btn-info(type='submit', value='Save')
      // Delete Modal HTML
      #deletePolicyModal.modal.fade
        .modal-dialog
          .modal-content
            form
              .modal-header
                h4.modal-title Delete Policy
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              .modal-body
                p Are you sure you want to delete these Records?
                p.text-warning
                  small This action cannot be undone.
              .modal-footer
                input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
                input.btn.btn-danger(type='submit', value='Delete')

